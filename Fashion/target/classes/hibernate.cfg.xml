<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>

        <!-- ✅ Kết nối SQL Server -->
        <property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
        <property name="hibernate.connection.url">jdbc:sqlserver://localhost:1433;databaseName=FashionStore;encrypt=true;trustServerCertificate=true</property>
        <property name="hibernate.connection.username">sa</property>
        <property name="hibernate.connection.password">20082005@Ho</property>

        <!-- ✅ Cấu hình Hibernate -->
        <property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>

        <!-- ✅ Khai báo Entity -->
        <mapping class="Com.company.fashiondesktop.entity.User"/>
        <mapping class="Com.company.fashiondesktop.entity.Address"/>
        <mapping class="Com.company.fashiondesktop.entity.CartDetail"/>
        <mapping class="Com.company.fashiondesktop.entity.Order"/>
        <mapping class="Com.company.fashiondesktop.entity.OrderDetail"/>
        <mapping class="Com.company.fashiondesktop.entity.PaymentType"/>
        <mapping class="Com.company.fashiondesktop.entity.Product"/>
        <mapping class="Com.company.fashiondesktop.entity.PurchaseOrderDetail"/>
        <mapping class="Com.company.fashiondesktop.entity.Review"/>
        <mapping class="Com.company.fashiondesktop.entity.Role"/>
        <mapping class="Com.company.fashiondesktop.entity.ShippingMethod"/>
        <mapping class="Com.company.fashiondesktop.entity.Supplier"/>
        <mapping class="Com.company.fashiondesktop.entity.Type"/>
        <mapping class="Com.company.fashiondesktop.entity.WishList"/>
        <mapping class="Com.company.fashiondesktop.entity.WishListDetail"/>
        
    </session-factory>
</hibernate-configuration>
